<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="public/font_awesome/fontawesome-free-5.9.0-web/css/all.css">
    <link rel="stylesheet" href="/public/css/estilo.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="public/js/javascript.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Quicksand:600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/mod.css">
</head>

<Body class="ffr">
    <div class="bg-dark sticky-top side">
        <h3 class="mb-5 text-center">Olá, <%=resposta[0].nome%></h3>

        <ul class="list-group">
            <a href="/">
                <li class="list-group-item list-group-item-action">
                    <i class="fas fa-home"></i>
                    Home
            </a>
            </li>
            <a href="/noticias">
                <li class="list-group-item list-group-item-action">
                    <i class="far fa-newspaper"></i>
                    Noticias
            </a>
            </li>
            <a href="/refugiados">
                <li class="list-group-item list-group-item-action">
                    <i class="fas fa-user-injured"></i>
                    Refugiados
            </a>
            </li>
            <a href="/ongs">
                <li class="list-group-item list-group-item-action ">
                    <i class="fas fa-globe"></i>
                    Ongs
            </a>
            </li>
            <a href="/sobre">
                <li class="list-group-item list-group-item-action mb-2">
                    <i class="fas fa-info-circle"></i>
                    Ongs
            </a>
            </li>

            <p class="text-center">Ferramentas de moderador</p>

            <a href="/listanot">
                <li class="list-group-item list-group-item-action">
                    <i class="far fa-edit"></i>
                    Gerenciar todas as noticias
            </a>
            </li>
            <a href="/form">
                <li class="list-group-item list-group-item-action">
                    <i class="far fa-newspaper"></i>
                    Criar Noticia
            </a>
            </li>
            <a href="/close">
                <li class="list-group-item list-group-item-action">
                    <i class="fas fa-sign-out-alt"></i>
                    Encerrar sessão
            </a>
            </li>

        </ul>
    </div>
    <div class="container-fluid bg-secondary">
        <div class="row text-white ">
            <p class="display-4 ml-4 border-bottom">Noticias recentes</p>
        </div>
        <div class="row">
            <% var r; for(i=0;i<not.length;i++){ %>
            <div class="col-sm-4 mb-2 mt-3">
                <div class="card">
                    <a href="#"><img class="card-img-top" src="<%= not[i].img %>" alt="Card image cap"></a>
                    <div class="card-body shadow">
                        <p class="card-text"><%= not[i].card_body %></p>
                        <div class="card-text border-top border-primary text-primary">
                            <a href="/noticia_modelo/<%=not[i].id_noticia%>">ver</a>
                            <a class="float-right" href="/editarnot/<%=not[i].id_noticia%>">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
            <%r++; if(r==3){%>
            <div class="row">
                <% }}%>
            </div>
        </div>
    </div>
</Body>

</html>